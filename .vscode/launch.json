        {
            "name": "CLI: norm visualization",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "--data_dir", "/data/ishang/FUCCI-dataset/",
                "--stats", "norm",
                "--calcnum", "20"
            ],
        },
        {
            "name": "CLI: pixel percentile visualization",
            "type": "python",
